{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": ["temporalio", "fastapi", "uvicorn", "uv"],
      "groupName": "python-runtime",
      "separateMinorPatch": true
    },
    {
      "matchPackagePatterns": ["svelte", "vite", "bun"],
      "groupName": "frontend-runtime"
    }
  ]
}
